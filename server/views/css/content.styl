item()
	border-radius(3px)
	box-sizing(border-box)
	position relative
	margin-bottom 10px
	border 1px solid transparent

	div.info
		padding 10px 66px
	div.no-photo
		padding-left 0
	img
		border-radius(6px)
		border-color transparent
		position absolute
		top 8px
		left 8px
		height 50px
		width 50px
	div.heading
		margin-bottom 5px
	div.detail
		font-size 0.9em
	a
		color #333
		text-decoration none
	a:hover
		color #c00
	strong
		color #006
		padding-right 10px
		font-weight normal
	em
		background-color #ffc
		border 1px solid #c96
	span
		margin-right 10px
	span.info
		color #c00
		font-size 0.9em
	ul
		position absolute
		top 10px
		right 20px
		display none
		font-size 0.9em
		li
			display inline
			padding-left 5px
			border-left 1px solid #ddd
		li:nth-child(1)
			border-left-color transparent
		a
			color #900

article.item
	item()

	border 1px solid #ddd
	background #ffe

article.list
	item()
	opacity(0.7)

article.list:hover
	border 1px solid #ddd
	background #ffe
	cursor pointer
	opacity(1)

	ul
		display inline
