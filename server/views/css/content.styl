item()
	border-radius(3px)
	box-sizing(border-box)
	position relative
	margin-bottom 10px
	border 1px solid transparent

	div.info
		padding 10px 66px
	div.no-photo
		padding-left 0
	img
		border-radius(6px)
		border-color transparent
		position absolute
		top 8px
		left 8px
		height 50px
		width 50px
	div.heading
		margin-bottom 5px
	div.detail
		font-size 0.9em
	a
		color #333
		text-decoration none
	a:hover
		color #c00
	strong
		color #006
		padding-right 10px
		font-weight normal
	em
		background-color #ffc
		border 1px solid #c96
	span
		margin-right 10px
	span.info
		color #c00
		font-size 0.9em
	ul
		position absolute
		top 10px
		right 20px
		display none
		font-size 0.9em
		li
			display inline
			padding-left 5px
			border-left 1px solid #ddd
		li:nth-child(1)
			border-left-color transparent
		a
			color #900

article.item
	item()

	border 1px solid #ddd
	background #ffe

article.list
	item()
	opacity(0.7)

article.list:hover
	border 1px solid #ddd
	background #ffe
	cursor pointer
	opacity(1)

	ul
		display inline

.image
	box-sizing(border-box)
	border-radius(5px)
	background #fff
	padding 4px 4px 0 4px
	margin 0			
	margin-top 10px
	
article.photo
	display inline-block
	margin 0
	padding 0
	cursor pointer
	
	.image
		border-radius(2px)
		opacity(0.8)
		position relative
		display inline-block
		margin 0
		
		a
			opacity(0)
			position absolute
			width 16px
			text-decoration none
		
		a.delete
			background transparent url("images/error.png") no-repeat 0 0
			top 10px
			right 10px

		a.default
			background transparent url("images/user.png") no-repeat 0 0
			top 10px
			left 10px
	
	.image:hover
		opacity(1)
		a
			opacity(0.5)
		a:hover
			opacity(1)

img
	box-sizing(border-box)
	border-radius(3px)
	border 1px solid #eee
	
img.bare
	border none
