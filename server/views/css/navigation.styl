nav()
    color #777
    padding 4px
    border 1px solid transparent
    text-decoration none
    font-size 16px

selected()
    box-shadow(rgba(0, 0, 0, 0.3) 0 1px #888)
    border-radius(3px)
    color #c00 !important
    background #eee

loading()
    display none
    color #300
    background transparent url("images/loading.gif") no-repeat 4px center
    padding-left 26px

nav#main
    display inline

    a
        nav()
    a:hover
        color #900

    ul, li
        display inline
    li
        padding-right 10px
    ul
        box-sizing(border-box)

    li.loading
        loading()
        float right

nav#security
    ul
        box-sizing(border-box)
        margin 0
        a
            nav()
        a:hover
            color #333

aside#sidebar nav
    a
        nav()
    a:hover
        color #900

    ul
        box-sizing(border-box)
        margin-top 60px
        li
            margin-top 15px
        li.loading
            loading()

nav#main, nav#user, nav#security
    a.active
        selected()

nav.side
    padding 5px 0 10px 10px
    text-align right
    height 100%
    font-size 0.8em

    ul.pages, ul.actions
        margin-bottom 30px

    li
        border-left-radius (3px)
        border 1px solid transparent
        border-right none
        margin-bottom 5px
        padding 8px
    li.active
        background #eee
        border-color #ddd
        a
            color #900
    a
        nav()
        color #333
        padding-right 5px
    a:hover
        color #c00

nav.secondary
    border-radius(3px)
    background #eee
    border 1px solid #ddd
    margin 0
    margin-bottom 10px
    padding 6px 0

    ul, li
        display inline
        padding 0
        margin 0
    ul
        box-sizing(border-box)
    li
        padding-left 10px
        a
            nav()
            font-size 16px
            padding 2px 6px
        a:hover
            color #900
        a.active
            border-radius(2px)
            border 1px solid #ddd
            background #fff
            color #900
    li.action
        float right
        margin 2px 5px
        a
            color #600

    input.search
        border-radius(3px)
        box-sizing(border-box)
        opacity(0.7)
        box-shadow(0.1)
        outline none
        font-size 0.9em
        border 0
        background #fff url("images/magnifier.png") no-repeat 8px center
        font-weight normal
        padding 2px 10px 3px 30px
        width 250px

    input:focus, input:hover
        opacity(1)
        color #006

    input.search.searching
        background #fff url("images/loading.gif") no-repeat 8px center

footer nav
    display inline
    float right

    ul, li
        display inline
    li
        padding 0 5px
        border-left 1px solid #ccc
    li:nth-child(1)
        border-left none
    ul
        box-sizing(border-box)
